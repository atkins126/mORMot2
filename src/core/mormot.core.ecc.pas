function TEccCertificateChain.GetBySerial(const Serial: TEccCertificateID; out
  Content: TEccCertificateContent): boolean;
var
  cert: TEccCertificate;
begin
  fSafe.Lock;
  try
    cert := GetBySerial(Serial);
    if cert <> nil then
    begin
      Content := cert.Content;
      result := true;
    end
    else
      result := false;
  finally
    fSafe.UnLock;
  end;
end;

function TEccCertificateChain.GetBySerial(const Serial: TEccCertificateID; out
